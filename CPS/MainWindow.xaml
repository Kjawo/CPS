<Window x:Class="CPS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:CPS"
        mc:Ignorable="d"
        Title="Cyfrowe przetwarzanie sygnałów" Height="650" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        
        <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="Right" Grid.Row="0">
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Y" LabelFormatter="{Binding YFormatter}"></lvc:Axis>
            </lvc:CartesianChart.AxisY>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="X" Labels="{Binding XFormatter}"></lvc:Axis>
            </lvc:CartesianChart.AxisX>
        </lvc:CartesianChart>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Margin="10,10,64,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Amplituda (A)" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right"/>
                <TextBox x:Name="amplitude" Grid.Column="1" Grid.Row="0" Margin="10,5"/>

                <Label Content="Czas początkowy (t1)" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right"/>
                <TextBox x:Name="startTime" Grid.Column="1" Grid.Row="1" Margin="10,5"/>

                <Label Content="Czas trwania sygnału (d)" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right"/>
                <TextBox x:Name="dTime" Grid.Column="1" Grid.Row="2" Margin="10,5"/>

                <Label Content="Okres podstawowy (T)" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right"/>
                <TextBox x:Name="T" Grid.Column="1" Grid.Row="3" Margin="10,5"/>
                
                <Button x:Name="draw" Content="Rysuj" Grid.Column="1" Grid.Row="4" Margin="10,3" Click="draw_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
